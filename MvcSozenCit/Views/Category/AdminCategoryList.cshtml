@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<br />

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">

        <h2 class="card-header">Kategori Listesi</h2>
        <div class="card-body">
            <div class="table-responsive">
                <button data-toggle="modal" data-target="#Modal1" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Kategori Ekle</button>
                <div class="modal" id="Modal1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2 class="modal-title mx-auto">Yeni Kategori Ekleme Paneli</h2>
                            </div>
                            <form method="post" action="/Category/AdminCategoryAdd/">
                                <div class="modal-body">
                                    <label>Kategori Adı</label>
                                    <input type="text" name="CategoryName" class="form-control" />
                                </div>
                                <button class="btn btn-rounded btn-brand ml-4 mb-4 ">Kaydet</button>
                            </form>

                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered first">
                    <thead style="font-size:18px;">
                        <tr>
                            <th>ID</th>
                            <th>Kategori Adı</th>
                            <th>Sil</th>
                            @*<th>Güncelle</th>*@
                            @*<th>Detaylar</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-rounded btn-danger ">Sil</a></td>
                                @*<td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-rounded btn-success">Güncelle</a></td>*@
                               

                            </tr>
                        }

                    </tbody>

                </table>
               

            </div>
        </div>
    </div>
</div>
