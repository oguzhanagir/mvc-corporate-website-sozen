@model IEnumerable<EntityLayer.Concrete.Product>

@{
    ViewBag.Title = "AdminProductList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
      
        <h2 class="card-header">Ürün Listesi</h2>
        <div class="card-body">
            <div class="table-responsive">
                <a href="/Product/AddNewProduct/" class="btn btn-rounded btn-dark mb-3 ml-2 mt-1">Yeni Ürün Ekle</a>
                <table class="table table-striped table-bordered first">
                    <thead style="font-size:18px;">
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductID</td>
                                <td>@item.ProductTitle</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.ProductDate.ToShortDateString()</td>
                                <td><a href="" class="btn btn-rounded btn-danger ">Sil</a></td>
                                <td><a href="" class="btn btn-rounded btn-success">Güncelle</a></td>
                                <td><a href="" class="btn btn-rounded btn-info">Detaylar</a></td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>
