
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="_header_online_wrap">
    <div class="container-fluid">
        <div class="row">
            <div class="_header_online_content">

                <div class="_header_online_content_txt">
                    <p class="_header_online_content_title3">Hoş Geldiniz</p>
                    <h4 class="_header_online_content_title1 mt-5">İletişim</h4>
                    <p class="_header_online_content_title2">Şirket Hakkında Alt Açıklama.</p>
                </div>

                <div class="_header_online_content_btn_wrap">
                    <button class="_header_online_play_btn" onclick="location.href='about.html'">Hakkımızda Daha Fazla</button>
                </div>

            </div>

            <div class="_header_online_img">
                <img src="~/sozenFrontend/assets/images/houseillustration.png" alt="header-back">
            </div>

        </div>
    </div>
</div>


<section class="_count_online_wrapper">
    <div class="container">
        <div class="row" id="contact_row">

            <div class="contact-text" id="">
                <h3 class="_about_online_content_title">İletişim Bilgileri</h3>
                <p class="_about_online_content_para"><strong>Telefon Numarası:</strong></p>
                <p class="_about_online_content_para"><strong>E-Posta:</strong> contact@sozencit.com</p>
                <p class="_about_online_content_para"><strong>Adres: </strong></p>
            </div>

            <div class="contact-text-input">
                <h3 class="contact-title2">Bizim ile İletişime Geçin</h3>
                <!-- <p class="_about_online_content_para">Şirketimiz her müşteriye özenle yaklaşır.</p> -->

                <div class="contact-div ">
                    <div class="wrap-input100 " data-validate="Lütfen Adınızı ve Soyadınızı Giriniz.">
                        <input class="input100" type="text" id="inputName" name="name" placeholder="Adınız ve Soyadınız">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fas fa-user-friends" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 " data-validate="Lütfen Telefon Numaranızı Giriniz">
                        <input class="input100" type="text" name="phone" id="inputPhone" placeholder="Telefon Numaranızı Giriniz.">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fas fa-phone" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 " data-validate="Lütfen E-Posta Adresini Giriniz">
                        <input class="input100" type="text" name="email" id="inputEmail" placeholder="E-Posta Adresiniz">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="wrap-input100 " data-validate="Lütfen Mesajınızı Giriniz">
                        <input class="input100" type="text" name="message" id="inputMesaj" placeholder="Mesajınız">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fas fa-inbox" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="_header_online_content_btn_wrap_2">
                        <button class="_header_online_play_btn_2" id="btn_contact" onclick="smtpMail()">Gönder</button>
                    </div>


                </div>
            </div>

            <div class="google-maps">
                <div class="google-maps-div" style="width: 80%">
                    <!-- <iframe width="850" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Atat%C3%BCrk%20Blv.%20No:129,%20Altay,%2045400%20Turgutlu/Manisa+(ELS%20Yaz%C4%B1l%C4%B1m)&amp;t=&amp;z=17&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                        <a href="https://www.gps.ie/sport-gps/">ELS Yazılım</a>
                    </iframe> -->
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Action("Newsletter","Home")
@Html.Action("Footer","Home")

